<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_winner_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dace_000.chessapp80.WinnerScreen">

    <EditText
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/gameTitle"
        android:hint="Title Name"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Don't Save Game"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:id="@+id/dontSaveGameButton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/saveGameButton"
        android:layout_alignStart="@+id/saveGameButton"
        android:layout_marginBottom="65dp" />

    <Button
        android:text="Save Game"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:id="@+id/saveGameButton"
        android:layout_below="@+id/gameTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultLabel"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColorHighlight="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Enter Title for Game"
        android:textSize="25dp"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/textView"
        android:layout_below="@+id/resultLabel"
        android:layout_alignLeft="@+id/gameTitle"
        android:layout_alignStart="@+id/gameTitle" />

</RelativeLayout>
